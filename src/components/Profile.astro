---
import {site, infoLinks} from "../consts";
import {Content as ProfileText} from '@/content/part/simple-profile.md';
---

<div class="shadow-lg rounded-lg h-64 w-auto flex flex-col items-center justify-center bg-bland-sideberprofile/75 p-2 text-sm">
  <img class="avatar" src={site.avatar} alt="avatar"/>
  <h2>{site.author}</h2>
  <div class="profile-text">
    <div class="text-center">{site.motto}</div>
    <div class="text-center"><ProfileText /></div>
  </div>
  <div class="flex items-center justify-center flex-wrap">
    {
      infoLinks.map((infoItem) => (
        <a title={infoItem.name} href={infoItem.outlink} target="_blank" class="hover:opacity-60">
          <i class={infoItem.icon + " text-2xl mr-2 cursor-pointer"}/>
        </a>
      ))
    }
  </div>
</div>
