---
import PostViewCard from '@components/PostViewCard.astro'
const {posts} = Astro.props;

---
<aside class="mt-3">
<h2 class="text-xl font-bold font-title">関連記事</h2>
<div class="grid md:grid-cols-2">
{
  posts ? ( 
    posts.map(post=>
      <PostViewCard blog={post}></PostViewCard>
    )
  ):""
}
</div>
</aside>